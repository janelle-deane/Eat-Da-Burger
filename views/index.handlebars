<div class="container">
  <h1>Yummy Burgers!</h1>
  <img id="burgerpic" src="/assets/images/burger.png" alt="burger" />

  <div class="row">
    <div class="col-md-6">
      <h2>Burgers not yet Devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6">
      <h2>Burgers that have been Devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h2>Add a Burger</h2>
<div class="col-md-12">
      <form class="create-form">

        <div class="form-group">
          <label for="bur">Burger Name:</label>
          <input type="text" id="bur" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">Devour it?</label><br>
          <input type="radio" name="devoured" value="0" > Eat immediately?<br>
          <input type="radio" name="devoured" value="1"checked> Place Order
        </div>

        <button type="submit">Add Burger</button>
      </form>
      </div>
    </div>
  </div>
</div>